<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Фильтры"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Город"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/karaganda_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Караганда"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/astana_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Астана"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/almata_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Алмата"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Статус"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/status_in_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Личность еще не установлена"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/status_successful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Личность установлена. Родственники найдены"/>

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Пол"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/sex_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Женщина"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/sex_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мужчина"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Месяц"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/january_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Январь"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/february_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Февраль"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/march_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Март"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/april_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Апрель"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/may_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Май"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/june_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Июнь"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/july_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Июль"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/august_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Август"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/september_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сентябрь"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/october_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Октябрь"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/november_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ноябрь"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/december_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Декабрь"/>
    </com.google.android.material.chip.ChipGroup>

</LinearLayout>